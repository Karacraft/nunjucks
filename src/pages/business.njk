{% block scripts %}
    <script>
        const swiperAutomotives = new Swiper('.swiperAutomotives', {
            // Optional parameters
            direction: 'horizontal',
            loop: true,
            slidesPerView: 3,
            spaceBetween: 30,
            // pagination: {
            //     el: ".swiper-pagination",
            //     clickable: true,
            // },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            speed:1000,
            // effect:'fade'
        });
    </script>
    <script>
        let observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: [0.25, 0.5, 0.75, 1]
        }

        function observerCallback(entries, observer) {
            entries.forEach(entry => {
                    if(entry.isIntersecting && entry.target.id === 'auto')
                    {
                        swiperAutomotives.autoplay.start()
                    }
                    if(entry.isIntersecting && entry.target.id === 'hcp')
                    {
                        swiperHcp.autoplay.start()
                    }
                    if(entry.isIntersecting && entry.target.id === 'molding')
                    {
                        swiperMold.autoplay.start()
                    }
                }
            );
        }

        // Grab all relevant elements from DOM
        const mysections = document.querySelectorAll('section');

        // Call function for each element
        const observer = new IntersectionObserver(observerCallback, observerOptions);
        mysections.forEach(el => observer.observe(el));

    </script>
